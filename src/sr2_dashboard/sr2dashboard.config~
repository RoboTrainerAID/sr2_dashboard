    workspace: &wsName "catkin_ws"
    resourcePath: "resources"
    name: "SR2 Emergency Stop"
    msgSource: "cob_msgs.msg"
    msgType: "EmergencyStopState"
    subscribeTo: "/emergency_stop_state"
    states:
