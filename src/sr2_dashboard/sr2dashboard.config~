        iconName: *wsName/*resourcePath/images/"emergency_stop_on.svg"
        msg: "Emergency stop is on! Press the button again and reset using the key to return to operational mode"
      - off_stop:
	iconName: *workspace/*resourcePath/images/"emergency_stop_off.svg"
        msg: "Emergency stop is off!"
